---
// component imports
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
    {
        prevUrl && (
                    <Link
                            text="⇐ Previous"
                            href={prevUrl}
                            styles="primary"
                            borderVisible={true}
                            isFilled={false}
                    />
        )
    }
    {
        nextUrl && (
                    <Link
                            text="Next ⇒"
                            href={nextUrl}
                            styles="primary"
                            borderVisible={true}
                            isFilled={false}
                    />
        )
    }
</nav>